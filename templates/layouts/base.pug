doctype html

html
  head

    block head
      meta(charset='utf-8')
      title= meta.title || title
      meta(name='viewport' content='width=device-width, initial-scale=1')
      meta(name='description' content=meta.description)
      meta(name='twitter:card' content='summary')
      meta(name='twitter:site' content=meta.site)
      meta(name='twitter:title' content=meta.title)
      meta(name='twitter:description' content=meta.description)

      if meta.twitter
        meta(name='twitter:creator' content=meta.twitter)

      if meta.image
        - var images = Array.isArray(meta.image) ? meta.image : [meta.image]
        each img in images
          meta(name='twitter:image' content=s(img.url || img))
          meta(property='og:image' content=s(img.url || img))

          if img.width && img.height
            meta(property='og:image:width' content=img.width)
            meta(property='og:image:height' content=img.height)

      meta(property='og:title' content=meta.title)
      meta(property='og:type' content=meta.type || 'article')
      meta(property='og:url' content=meta.url)
      meta(property='og:description' content=meta.description)
      meta(property='og:site_name' content=meta.site)

      if meta.app_id
        meta(property='fb:app_id' content=meta.app_id)

      script(defer src='https://use.fontawesome.com/releases/v5.0.7/js/all.js')
      link(rel='stylesheet' href=s('css/index.css'))
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:400,700|PT+Serif:400,700')

      include ../analytics.pug

  block body
    //- body -//
